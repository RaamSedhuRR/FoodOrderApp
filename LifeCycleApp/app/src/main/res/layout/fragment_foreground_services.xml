<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ForegroundServicesFragment">

    <ProgressBar
        android:id="@+id/serviceProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="261dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/startServiceBtn"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="421dp"
        android:text="@string/txtStartService" />

    <Button
        android:id="@+id/stopServiceBtn"
        android:layout_width="150dp"
        android:layout_height="45dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="16dp"
        android:text="@string/txtStopService" />


</RelativeLayout>